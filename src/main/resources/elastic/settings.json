{
  "analysis": {
    "tokenizer": {
      "my_nori_tokenizer": {
        "type": "nori_tokenizer",
        "decompound_mode": "mixed"
      }
    },
    "analyzer": {
      "korean_english": {
        "type": "custom",
        "tokenizer": "my_nori_tokenizer",
        "filter": [
          "lowercase",
          "english_stop",
          "nori_readingform",
          "nori_part_of_speech"
        ]
      }
    },
    "filter": {
      "english_stop": {
        "type": "stop",
        "stopwords": "_english_"
      },
      "nori_part_of_speech": {
        "type": "nori_part_of_speech",
        "stoptags": ["E", "J", "IC", "SF", "SE", "SSO", "SSC", "SC", "SY"]
      }
    }
  }
}
